{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["src/**/*.spec.ts"],
  "rules": {
    "object-curly-spacing": "off",
    "require-jsdoc": "off",
    "quotes": [2, "double", { "avoidEscape": true }]
  }
}
